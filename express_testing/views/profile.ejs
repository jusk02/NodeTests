<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Node server</title>
    <style media="screen">
      body{background: slategrey}
      h1,h2{color: orange}
      li,p{color: white}
      ul{list-style-type: none; padding: 0}
    </style>
  </head>
  <body>
    <h1>Awesomasauce <%= person %> profile!</h1>
    <p>Awesomesauce <%= person %> is awesome</p>
    <p>age = <%= data.age %></p>
    <p>job = <%= data.job %></p>
    <h2>Hobbies</h2>
    <ul>
      <% data.hobbies.forEach(function(item){ %>
        <li><%= item %></li>
      <% }); %>
    </ul>

  </body>
</html>
